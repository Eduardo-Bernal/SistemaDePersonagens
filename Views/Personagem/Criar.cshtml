@model  SistemaDePersonagens.Models.Personagem

<h2>Cadastrar Personagem</h2>

<form asp-action="Criar">
    <label>Nome:</label>
    <input type="text" name="nomeConstrutor" class="form-control" required />

    <label>nivel:</label>
    <input type="number" name="nivelConstrutor" class="form-control" required />

    <label>Tipo:</label>
    <select name="tipoPersonagemConstrutor" class="form-control" required>
        <option value="Guerreiro">Guerreiro</option>
        <option value="Mago">Mago</option>
    </select>

    <button type="submit" class="btn btn-success mt-3">Salvar</button>
</form>